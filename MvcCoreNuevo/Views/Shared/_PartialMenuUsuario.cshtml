@{
    string usuario = Context.Session.GetString("USERNAME");
}

@if (usuario == null)
{
    <li class="nav-item">
        <a class="nav-link" asp-action="LogIn" asp-controller="Home">LogIn</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Home" asp-action="CloseSession">Sign Out @usuario</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Perfil</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Pedidos</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Comentarios</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Modificar Datos</a>
    </li>
}